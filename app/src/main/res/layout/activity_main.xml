<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.github.sdpsharelook.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:ems="10"
            android:hint="@string/nameHint"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button_greet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="greet"
            android:text="@string/greet"
            android:backgroundTint="@color/white"
            android:textColor="@color/black" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:barrierDirection="top" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:barrierDirection="top" />

        <Button
            android:id="@+id/sectionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="sectionActivity"
            android:text="@string/sectionsButtonName"
            android:backgroundTint="@color/white"
            android:textColor="@color/black" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:barrierDirection="top" />

        <Button
            android:id="@+id/translateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="translatorActivity"
            android:text="@string/translateButtonName"
            android:backgroundTint="@color/white"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="loginActivity"
            android:text="@string/loginButton"
            android:backgroundTint="@color/white"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/languagesButton"
            android:theme="@style/Theme.AppCompat.spinnerButton"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="languagesPopup"
            android:text="@string/languages" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>