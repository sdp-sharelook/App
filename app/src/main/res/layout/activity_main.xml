<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.github.sdpsharelook.MainActivity"
        android:padding="5dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/nameHint"
            android:ems="10"
            android:minHeight="48dp"
            android:id="@+id/edit_text_name"
            android:autofillHints="name"
            />

        <Button
                android:text="@string/greet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_greet"
                android:onClick="greet" />

        <Button
                android:text="@string/textToSpeechButtonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_text_to_speech"
                android:onClick="textToSpeech" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="voiceRecognition"
            android:id="@+id/button_voice_recognition"
            android:text="@string/speech_recognition" />

        <Button
            android:id="@+id/button_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="sectionActivity"
            android:text="@string/sectionsButtonName" />

        <Button
            android:id="@+id/button_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="translatorActivity"
            android:text="@string/translateButtonName" />

        <Button
            android:id="@+id/button_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cameraActivity"
            android:text="@string/camera" />

        <Button
            android:id="@+id/button_text_detection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="textDetectionActivity"
            android:text="@string/text_detection" />
        <Button
            android:id="@+id/button_database"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="databaseActivity"
            android:text="@string/database" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>